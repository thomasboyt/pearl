    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-register": "^6.9.0",
    "canvas": "^1.4.0",
    "del": "^2.2.1",
    "eslint": "^3.2.2",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-cli": "^1.2.2",
    "gulp-clone": "^1.0.0",
    "gulp-filter": "^4.0.0",
