{
  "name": "pearl",
  "version": "0.0.2",
  "description": "A tiny framework for games",
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "jsnext:main": "dist/es/index.js",
  "typings": "dist/es/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "node scripts/builder.js",
    "build-examples": "webpack --config webpack/examples.config.js",
    "run-examples": "webpack-dev-server --config webpack/examples.config.js",
    "test": "NODE_ENV=test node scripts/builder.js && ava",
    "lint": "tslint 'src/**/*.ts' 'examples/**/*.ts' 'spec/**/*.ts'"
  },
  "author": "Thomas Boyt <me@thomasboyt.com>",
  "license": "MIT",
  "devDependencies": {
    "ava": "^0.15.2",
    "babel-cli": "^6.11.4",
    "babel-core": "^6.10.4",
    "babel-loader": "^6.2.4",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-register": "^6.9.0",
    "canvas": "^1.4.0",
    "eslint": "^3.2.2",
    "jsdom": "^9.4.1",
    "ts-loader": "^0.8.2",
    "tslint": "^3.14.0",
    "typescript": "^2.0.0",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  },
  "ava": {
    "files": [
      "tmp/es/spec"
    ],
    "babel": "inherit",
    "require": [
      "babel-register",
      "./spec/helpers/setup-browser-env.js"
    ],
    "timeout": "5s"
  },
  "dependencies": {
    "robust-segment-intersect": "^1.0.1",
    "sat": "^0.5.0"
  }
}
