{
  "compilerOptions": {
    "outDir": "./tmp/es",
    "module": "es2015",
    "target": "es2015",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*.ts",
    "spec/**/*.ts",
    "examples/**/*.ts",
    "types/**/*.ts"
  ],
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  }
}
