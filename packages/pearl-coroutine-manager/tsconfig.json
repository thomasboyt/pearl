{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "outDir": "./dist",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "removeComments": false,
    "strict": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.spec.*"
  ]
}